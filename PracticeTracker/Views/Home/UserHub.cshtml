@{
    ViewData["Title"] = "User Hub";
}

<div class="container mt-5">

    <!-- Header -->
    <div class="text-center">
        <h2 class="mb-4">Welcome to Your Practice Session Hub</h2>
        <p class="lead">Manage your practice sessions efficiently.</p>
    </div>

    <!-- Table: Practice Sessions -->
    <h2>Practice Sessions</h2>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Duration (min)</th>
                <th>Focus Area</th>
                <th>Notes</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var session in Model)
            {
                if (session.UserId == 2)
                {
                    <tr>
                        <td>@session.CreatedAt.ToString("MM/dd/yyyy")</td>
                        <td>@session.DurationMinutes min</td>
                        <td>@session.FocusArea</td>
                        <td>@session.Notes</td>
                        <td class="text-center">
                            <a asp-controller="Session" asp-action="Edit" asp-route-id="@session.Id" class="btn btn-success btn-sm text-light px-3 py-1">
                                Edit
                            </a>
                            <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal"
                                    data-session-id="@session.Id">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="container mt-4">
        <div class="row">
            <!-- Left Side: Create New Session & Create New Setlist -->
            <div class="col-md-4">
                <div class="card shadow-sm mb-3">
                    <div class="card-body text-center">
                        <h4 class="card-title">Start a New Practice Session</h4>
                        <p class="card-text">Log a new session to track your progress.</p>
                        <a asp-controller="Session" asp-action="Create" class="btn btn-primary btn-lg">
                            New Session
                        </a>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h4 class="card-title">Start a New Setlist</h4>
                        <p class="card-text">Keep track of your favorite songs or tonight's big show.</p>
                        <a asp-controller="Setlist" asp-action="Create" class="btn btn-primary btn-lg">
                            New Setlist
                        </a>
                    </div>
                </div>
            </div>

            <!-- Right Side: Setlist Table -->
            <div class="col-md-8">
                <h3>Your Setlists</h3>
                <table id="setlistTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Setlist Name</th>
                            <th>Song Count</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal - Delete Session -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this session?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a id="confirmDeleteBtn" href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        
        // AbortController
        let controller = new AbortController(); 

        // Delete Modal
        document.addEventListener("DOMContentLoaded", function () {
            var deleteModal = document.getElementById("deleteModal");
            if (deleteModal) {
                deleteModal.addEventListener("show.bs.modal", function (event) {
                    var button = event.relatedTarget;
                    var sessionId = button.getAttribute("data-session-id");
                    var deleteUrl = `/Session/Delete/${sessionId}`;
                    document.getElementById("confirmDeleteBtn").setAttribute("href", deleteUrl);
                });
            }

            // Setlist Table
            fetch('/Setlist/GetUserSetlists', { signal: controller.signal }) // Attach abort signal
                .then(response => response.json())
                .then(data => {
                    console.log("Received setlists:", data);

                    let tableBody = document.querySelector("#setlistTable tbody");
                    if (!tableBody) {
                        console.error("Table body not found!");
                        return;
                    }

                    tableBody.innerHTML = "";
                    data.forEach(setlist => {
                        let row = `<tr>
                            <td>${setlist.title}</td>
                            <td>${setlist.songCount}</td>
                                <td class="text-center">
                            <a href="/Setlist/Details/${setlist.id}" class="btn btn-primary btn-sm">
                                View
                            </a>
                        </td>
                        </tr>`;
                        tableBody.innerHTML += row;
                    });
                })
                .catch(error => {
                                   // Ignore abort errors
                    if (error.name !== "AbortError") { 
                        console.error("Error loading setlists:", error);
                    }
                });
        });

        // Cancel fetch when leaving the page
        window.addEventListener("beforeunload", function () {
        // Stop ongoing requests
            controller.abort(); 
        });
    </script>
}