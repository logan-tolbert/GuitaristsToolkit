@using App.Models  
@model PracticeSession  

@{
    ViewData["Title"] = "New Session";
}
<div class="row justify-content-center">  
   <div class="col-md-8">  
       <h2 class="text-center mb-4">New Session</h2>  
       <form asp-action="Create">  
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-group">
                <label asp-for="CreatedAt">Date:</label>
                <input type="date" id="Date" asp-for="CreatedAt" class="form-control"
                       value="@Model.CreatedAt.ToString("yyyy-MM-dd")"
                       max="@DateTime.UtcNow.ToString("yyyy-MM-dd")"
                       required />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
           </div>  
           <div class="form-group">  
               <label asp-for="DurationMinutes">Duration (minutes):</label>  
               <input asp-for="DurationMinutes" type="number" class="form-control" placeholder="Enter duration in minutes" required>  
               <span asp-validation-for="DurationMinutes" class="text-danger"></span>
           </div>  
           <div class="form-group">  
               <label asp-for="FocusArea">Focus Area:</label>  
               <input asp-for="FocusArea" type="text" class="form-control" placeholder="e.g., Scales, Rhythm, Song X" required>  
               <span asp-validation-for="FocusArea" class="text-danger"></span>
           </div>  
           <div class="form-group">  
               <label asp-for="Notes">Notes:</label>  
               <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Any notes about the practice session"></textarea>  
               <span asp-validation-for="Notes" class="text-danger"></span>
           </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-success" />
                <a asp-controller="Home" asp-action="UserHub" class="btn btn-danger">Cancel</a>
            </div>
        </form>  
   </div>  
</div>
