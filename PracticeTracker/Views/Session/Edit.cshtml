@using App.Models
@model PracticeSession

@{
    ViewData["Title"] = "New Session";
}
<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="text-center mb-4">Edit Session</h2>
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreatedAt">Date:</label>
                <input asp-for="CreatedAt" type="date" class="form-control" required>
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DurationMinutes">Duration (minutes):</label>
                <input asp-for="DurationMinutes" type="number" class="form-control" placeholder="Enter duration in minutes" required>
                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FocusArea">Focus Area:</label>
                <input asp-for="FocusArea" type="text" class="form-control" placeholder="e.g., Scales, Rhythm, Song X" required>
                <span asp-validation-for="FocusArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes">Notes:</label>
                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Any notes about the practice session"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
